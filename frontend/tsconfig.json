{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*.ts", "src/**/*.vue"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {  
            "@/*": ["./src/*"]
        },
        "target": "ES2024",
        "lib": ["ES2024", "DOM", "DOM.Iterable"]
    }
}